{
    "$schema": "https://json.schemastore.org/tsconfig",
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"],
    "compilerOptions": {
        "target": "es2021",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "lib": ["es2021", "DOM"],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    }
}
